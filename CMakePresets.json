{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "base",
            "displayName": "Debug",
            "description": "Debug build with no optimization",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "VPS_BUILD_TESTS": "ON",
                "VPS_BUILD_BENCHMARKS": "OFF",
                "VPS_ENABLE_OPENMP": "ON"
            }
        },
        {
            "name": "release",
            "inherits": "base",
            "displayName": "Release",
            "description": "Optimized release build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VPS_BUILD_TESTS": "OFF",
                "VPS_BUILD_BENCHMARKS": "OFF",
                "VPS_ENABLE_OPENMP": "ON"
            }
        },
        {
            "name": "release-with-tests",
            "inherits": "base",
            "displayName": "Release with Tests",
            "description": "Optimized build with tests enabled",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VPS_BUILD_TESTS": "ON",
                "VPS_BUILD_BENCHMARKS": "OFF",
                "VPS_ENABLE_OPENMP": "ON"
            }
        },
        {
            "name": "ci",
            "inherits": "base",
            "displayName": "CI Build",
            "description": "Build configuration for continuous integration",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VPS_BUILD_TESTS": "ON",
                "VPS_BUILD_BENCHMARKS": "ON",
                "VPS_ENABLE_OPENMP": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "release-with-tests",
            "configurePreset": "release-with-tests"
        },
        {
            "name": "ci",
            "configurePreset": "ci"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release-with-tests",
            "configurePreset": "release-with-tests",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "ci",
            "configurePreset": "ci",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            }
        }
    ]
}
